<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:visibility="invisible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="积水查询"
            android:textColor="@color/white"
            android:textSize="@dimen/level_4"/>

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_below="@+id/tvCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/shawn_icon_banner"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tvRecmond"
            android:layout_below="@+id/ivBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="推荐实景"
            android:textColor="@color/white"
            android:textSize="@dimen/level_4"/>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRecmond"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:cacheColorHint="@color/transparent"
            android:fadingEdge="none"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/transparent"
            android:numColumns="2"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp"/>

        <RelativeLayout
            android:id="@+id/llCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridView"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="全部实景"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4"/>

            <TextView
                android:id="@+id/tvAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shawn_bg_corner_red2"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="选择地区>"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"
                android:visibility="invisible"/>

        </RelativeLayout>

        <com.cxwl.weather.eye.view.ScrollviewListview
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llCount"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:gravity="center"
            android:listSelector="@color/transparent"
            android:scrollbars="none"/>

    </RelativeLayout>

</ScrollView>

